 <div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Name*</label>
        <div class="col-sm-10">
          {{input type="text" value=item.recipe.name class="form-control" placeholder="The name of the Recipe"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Categories</label>
        <div class="row col-sm-10">
          <br>
          {{#each item.categories as |category| }}
             <div class="checkbox">
              <label>
                <input type="checkbox" name="category" checked={{isPicked}} onclick={{action 'elementSelected' category value=target.checked}}> {{category.name}}
              </label>
            </div>
          {{/each}}
    </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Ingredients</label>
        <div class="col-sm-10">
          {{input type="text" value=item.ingredients class="form-control" placeholder="The ingredients of the recipe"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'buttonClicked' item}} >Submit</button>
        </div>
    </div>
</div>
