<div class="row">
  <div class="jumbotron text-center login-title">
    <h1 class="super-title">LogIn</h1>
  </div>
</div>
<br>
<div class="container-fluid">
    <section class="container">
		<div class="container-page">
			<div class="col-sm-6 col-md-offset-3">

				<div class="form-group">
					<label>Email Address</label>
          {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
				</div>

				<div class="form-group">
					<label>Password</label>
					{{input type="password" value=password class="form-control" placeholder="Please type yout password" autofocus="autofocus"}}
				</div>
        {{#if session.isWorking}}
          <button class='btn btn-default' disabled='disabled'>
          {{fa-icon 'spinner' spin=true}} Signing in...
          </button>
        {{else}}
				    <button type="submit" class="btn btn-primary btn-block" disabled={{isDisabled}} {{action 'login' 'password'}}>LogIn</button>
        {{/if}}
			</div>
		</div>
	</section>
</div>
