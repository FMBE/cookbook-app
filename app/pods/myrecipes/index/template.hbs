<div class="row">
  {{#each model as |recipe|}}
    <div class="col-md-4">
      {{#recipe-item item=recipe}}
        {{#link-to 'libraries.edit' library.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteRecipe' recipe}}>Delete</button>
      {{/recipe-item}}
    </div>
  {{/each}}
</div>
